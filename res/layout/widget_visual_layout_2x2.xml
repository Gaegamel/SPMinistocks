                        <TextView android:id="@+id/text65" style="@style/StockChangeVS"/>
                    </LinearLayout>


                    <!-- Numerical -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="3dp"
                        android:orientation="horizontal">
                        <TextView android:id="@+id/text66" style="@style/StockPriceVS"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Panel8"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:background="#ffff0000">


                <!-- Upper side of inner TextViews -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <!-- Stock Symbol -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="3dp"
                        android:orientation="horizontal">
                        <TextView android:id="@+id/text81" style="@style/StockNameVS"/>
                    </LinearLayout>

                    <!-- Price -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="3dp"
                        android:orientation="horizontal">
                        <TextView android:id="@+id/text82" style="@style/StockPriceVS"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- Two bottom rows for different displays of change -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <!-- In percent -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="2dp"
                        android:orientation="horizontal">
                        <TextView android:id="@+id/text83" style="@style/StockWideChangeVS"/>
                    </LinearLayout>


                    <!-- Numerical -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="3dp"
                        android:orientation="horizontal">
                        <TextView android:id="@+id/text84" style="@style/StockPriceVS"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <!-- In percent -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="2dp"
                        android:orientation="horizontal">
                        <TextView android:id="@+id/text85" style="@style/StockChangeVS"/>
                    </LinearLayout>


                    <!-- Numerical -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="3dp"
                        android:orientation="horizontal">
                        <TextView android:id="@+id/text86" style="@style/StockPriceVS"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>

